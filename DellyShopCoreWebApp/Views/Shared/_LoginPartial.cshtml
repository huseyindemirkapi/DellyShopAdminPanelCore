@using Microsoft.AspNetCore.Identity
@using DellyShop.Domain.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@*(SignInManager.IsSignedIn(User))*@
@if (User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right" style="margin-left:860px;">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="User" asp-action="Index" title="Manage"> Hello  @UserManager.GetUserName(User)  &nbsp &nbsp  </a>
            </li>
            <li>
                <button type="submit" class="btn btn-info navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>*@
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Sing In</a></li>
    </ul>
}

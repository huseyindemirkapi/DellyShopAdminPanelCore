@model DellyShop.Domain.ViewModels.UserCreateOrEditViewModel
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center bg-info text-gray-dark"> @Model.Title </h2>

<div class="row">
    <div class="col-md-12">
        <form action="@Model.Action" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group col-lg-4">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" required/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-4">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-danger">
                <input asp-for="@Model.LockoutEnabled" type="checkbox" id="isActive" /> <label> Is Active ? </label>
            </div>

            <div class="form-group">
                <input type="submit" value="@Model.Button" class="btn btn-success js-button-doubleclick" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text text-danger">Return to User List!</a>
</div>
@section scripts{
    <script src="~/lib/jquery/jquery.min.js"></script>
}

@model DellyShop.Domain.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center bg-info text-gray-dark">Users</h2>

<div class="row">
    <div class="col-lg-12">
        <form asp-action="Index" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col-lg-4">
                <label asp-for="Users" class="control-label"></label>
                <select asp-for="SelectedUser" name="SelectedUser" class="form-control">
                    <option selected="selected" value="">All Users</option>
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.Id">@user.FullName</option>
                    }
                </select>
                <span asp-validation-for="Users" class="text-danger"></span>
            </div>

            <div class="col-lg-12">
                <div class="form-group">
                    <input type="submit" value="Ara" class="btn btn-info" />
                </div>
            </div>
        </form>
        @*<div class="col-lg-12">

                <a class="btn btn-success float-lg-right" asp-controller="User" asp-action="Create"><b>Add New User</b></a>

            </div>*@
    </div>
</div>
<div class="row">
    <div class="col-xs-12 table-responsive">
        <table class="table table-striped disabled" id="example">
            <thead>
                <tr>
                    @*<th>Product Id <i class="fas fa-filter"></i></th>*@
                    <th>FullName <i class="fas fa-filter"></i></th>
                    <th>Email <i class="fas fa-filter"></i></th>
                    <th>PhoneNumber <i class="fas fa-filter"></i></th>
                    <th>IsActive <i class="fas fa-filter"></i></th>
                    <th>CreatedBy <i class="fas fa-filter"></i></th>
                    <th>CreatedAt <i class="fas fa-filter"></i></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td><span class="stock-index-partname">@user.FullName</span></td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.LockoutEnabled</td>
                        <td>@user.CreatedBy</td>
                        <td>@user.CreatedAt</td>
                        <td class="float-right">
                            @Html.ActionLink("Edit", "UpdateUser", "User", new { id = user.Id }) |
                            <span class="btn btn-danger btn-sm" id="textBlack">@Html.ActionLink("Delete", "Delete", "User", new { id = user.Id })</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.col -->
</div>

@section Scripts {

    <script>

        $(document).ready(function () {
            $('#example').DataTable({
